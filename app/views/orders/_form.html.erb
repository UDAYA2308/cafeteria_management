<% MenuItem.all.each do |item| %> 
  <%= form_with url: create_cart_path do |form| %>
    <div class="Menu-items">
      <p class="Menu-item-name"> <%= item.menu_item_name%> </p>
      <p class="Menu-item-"> <%= item.menu_item_price %> </p>
      <%= hidden_field_tag 'menu_item_id',item.id%>
      <%= hidden_field_tag 'menu_id',item.menu_id%>
      <%= hidden_field_tag 'user_id', @current_user.id %>
      <%= number_field_tag 'quantity',0 ,min: 0 , :onclick => "submit()" %>
    </div>
  <% end %>
<% end %>
<%= form_with url: carts_path , method: "GET" do %>  
  <%= button_tag 'View cart' , :onclick => "submit()" %>
<% end %>