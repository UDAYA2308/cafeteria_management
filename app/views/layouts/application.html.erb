<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body class="Page">

  <% if @current_user %>
    <p class="UserHeader main">
      Welcome <%= @current_user.first_name%> <%= link_to "Sign-out",destroy_session_path, method: "delete" %>
    </p>
    
  <div class="sidenav">
    <p> <%= link_to "Home ", mains_path %> </p>
    <% if @current_user.role == 'owner'%>
      <p> <%= link_to "Menu", menus_path %> </p>
    <% end %> 
    <p> <%= link_to "Menu items ", menu_items_path %> </p>
    <p> <%= link_to "Order items ", order_items_path %> </p>
    <p> <%= link_to "Order ", orders_path %> </p>
    <p> <%= link_to "cart", carts_path %> </p> 
  </div>


  <% end %> 
  <% if flash[:error]%>
    <p class="User-error Login-page">
      <%=flash[:error] %>
    </p>

  
  <% end %>
  <article class="main">
    <%= yield %>
  </article>
  </body>
</html>
