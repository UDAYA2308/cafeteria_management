<p id="notice"><%= notice %></p>

<h1>Order Details</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Menu item</th>
      <th>Menu item name</th>
      <th>Menu price</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.order_id %></td>
        <td><%= order_detail.menu_item_id %></td>
        <td><%= order_detail.menu_item_name %></td>
        <td><%= order_detail.menu_price %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= order_detail.total %></td>
        <td><%= link_to 'Show', order_detail %></td>
        <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
        <td><%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

